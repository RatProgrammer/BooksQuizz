@model BooksQuizz.ViewModel.HomeViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>BooKs QuuiZZy</h1>
    <p class="lead">Sprawdź jak dobrze znasz kultowe książki!</p>
    @*<p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>*@
</div>

@{
    var desciptions = Model.QuizDescription;
    var names = Model.QuizNames;
}
@for (int i = 0; i < names.Count; i++)
{
    <div class="col-md-4">
        <h2>@names[i]</h2>
        <p>
            @desciptions[i]
        </p>
        <p>
            @Html.ActionLink("Przejdź do QuuiZZu", "SelectedQuiz", new { ID = i }, new { @class= "btn btn-default" })
        </p>
    </div>
}
           
